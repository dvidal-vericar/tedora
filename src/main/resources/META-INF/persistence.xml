<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="tedoraPU_test">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>org.vericar.tedora.model.Currencies</class>
        <class>org.vericar.tedora.model.DoiType</class>
        <class>org.vericar.tedora.model.FgnIncomeType</class>
        <class>org.vericar.tedora.model.FgnPurchase</class>
        <class>org.vericar.tedora.model.FgnServiceType</class>
        <class>org.vericar.tedora.model.FolioType</class>
        <class>org.vericar.tedora.model.Partner</class>
        <class>org.vericar.tedora.model.Purchase</class>
        <class>org.vericar.tedora.model.Sale</class>
        <class>org.vericar.tedora.model.TaxPeriod</class>
        <class>org.vericar.tedora.model.XRate</class>

        <class>org.vericar.tedora.model.LocalDateEclipse</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3306/tedora_db"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>

</persistence>
